<?xml version="1.0" encoding="UTF-8"?>
<project name="juniversalchardet" default="dist" basedir=".">
	<description>
		A Java port of Mozilla's universalchardet.
	</description>

	<property name="src" location="src"/>
	<property name="dist" location="dist"/>
	<property name="version" value="1.0.2"/>

	<target name="init">
		<mkdir dir="${dist}"/>
		<mkdir dir="${dist}/classes"/>
	</target>
	
	<target name="compile" depends="init">
		<javac	sourcepath=""
				srcdir="${src}"
				destdir="${dist}/classes">
			<include name="**/*.java"/>
			<exclude name="**/.svn/"/>
			<exclude name="**/*Test.java"/>
		</javac>
	</target>
	
	<target name="dist" depends="compile">
		<jar	destfile="${dist}/juniversalchardet-${version}.jar"
				basedir="${dist}/classes"
				excludes="**/.svn/"
		/>
	</target>
	
	<target name="clean">
		<delete dir="${dist}"/>
	</target>
</project>
